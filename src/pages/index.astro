---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { Debug } from "astro:components";

import ProyectCard from "@/components/ProyectCard.vue";

import { getCollection } from "astro:content";
const proyects = await getCollection("proyects");
---

<Layout title="test">
  <section class="mx-auto prose prose-lg flex flex-col gap-2 mb-8">
    {
      proyects.map((proyect) => (
        <>
          <ProyectCard proyect={proyect} client:load>
            <Image
              src={proyect.data.cover}
              alt={proyect.data.coverAlt}
              class="rounded-sm object-cover object-top shadow-xl shadow-black/30 aspect-video"
            />
          </ProyectCard>
        </>
      ))
    }
  </section>
</Layout>
